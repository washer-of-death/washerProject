<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="80dp"
    android:layout_height="60dp">
    <Button
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="7dp"
        android:background="@color/colorPrimary"
        android:text="@string/my_logout"
        android:textColor="@color/colorText"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginLeft="251dp">

        <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#00ff0000"
        android:onClick="mOnPopupClick"
        android:text="@string/my_popupbutton"
        android:textColor="@color/colorQuestion"
        android:textSize="45sp" />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/whasherusi"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/whasherusi"
                />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/whasherusi"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="205dp">

            <ImageView
                android:id="@+id/button9"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/dryusi"
                />

            <ImageView
                android:id="@+id/button10"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dryusi"
                />

            <ImageView
                android:id="@+id/button11"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dryusi"
                />

            <ImageView
                android:id="@+id/button12"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dryusi"
                />

            <ImageView
                android:id="@+id/button13"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dryusi"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용하실 세탁기나 건조기를 선택하세요."
                android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>